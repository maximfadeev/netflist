<script src="/scripts/list.js"></script>
<div id="split-page">
    <div id="left">
        {{> header}}

        <div id="lists-element">
            <h1>Lists created by {{user.name}}</h1>

            <div id="lists">
                {{#each lists}}
                    <div class="list">
                        <button type="submit" class="delete-btn" onclick="deleteButton('{{this._id}}')">
                            <i class=" fas fa-times-circle"></i>
                        </button>
                        <a href="javascript:generateList('{{this._id}}')">
                            <div class="image-preview">
                                <img src="{{this.titles.0.image}}" class="first">
                                <div class="wrapper"> <img src="{{this.titles.1.image}}"
                                        onerror="this.src = '/images/no-preview-1.png';" class="overlap second"></div>

                                <img src="{{this.titles.2.image}}" onerror="this.src = '/images/no-preview-2.png';"
                                    class="overlap third">
                            </div>
                            <div class="p">{{this.name}}</div>

                        </a>
                    </div>
                {{/each}}
                <form action="/create" method="post" id="btn-wrap">
                    <button type="submit" class="create-list-btn">
                        <i class="fas fa-plus-circle"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div id="right"></div>
</div>
<script>


    { { !--document.getElementById("right").style.width = "450px"; --} }

</script>
